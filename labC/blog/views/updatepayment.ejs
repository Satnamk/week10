<!-- updatepayment.ejs -->
<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title: "Update page" }) %>
<body>
  <%- include('partials/navbar') %>

  <div class="content">
    <div class="update">
      <h2>Update Payment</h2>
      <form action="/single-payment/<%= payment._id %>?_method=PUT" method="POST">
          
        <label>Amount:</label>
        <input type="number" value="<%= payment.amount %>" id="amount" name="amount" required />

        <label for="method">Method:</label>
        <input type="text" id="method" name="method" required value="<%= payment.method %>" />

        <label>Status:</label>
        <input type="text" value="<%= payment.status %>" id="status" name="status" required />

        <button type="submit">Update Payment</button>
      </form>
    </div>
  </div>

  <% 
  function formatDate(dateString) {
      const date = new Date(dateString);
      // Format the date as desired (e.g., YYYY-MM-DD)
      const formattedDate = date.toLocaleDateString('fi-FI', { year: 'numeric', month: 'long', day: 'numeric' });
      return formattedDate;
  } 
  %>

  <%- include('partials/footer') %>
</body>
</html>
