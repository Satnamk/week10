<!-- Define a function to render each event -->
<% function renderEvent(event) { %>
<div class="item-preview">
  <a href="/single-event/<%= event._id %>">
    <h2>Title: <%= event.title %></h2>
    <p>Written by Satnam</p>
  </a>
</div>
<% } %>

<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title: "Home page" }) %>

  <body>
    <%- include('partials/navbar.ejs') %>
    <%- include('partials/hero.ejs') %>
    <div class="content">
      <div class="home">
        <div class="item-list">
          <% if (events.length > 0) { %>
          <!-- Call the renderEvent function for each event -->
          <% events.forEach(renderEvent); %> <% } else { %>
          <p>No events found.</p>
          <% } %>
        </div>
      </div>
    </div>
    <%- include('partials/ads.ejs') %>
    <%- include('partials/footer.ejs') %>
  </body>
</html>
